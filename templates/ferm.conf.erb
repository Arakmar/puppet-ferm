# -*- shell-script -*-

@include '<%= @ferm_dir %>/conf.d/';

domain (ip ip6) {
    table filter {

        chain INPUT {
            policy DROP;
            # connection tracking
            mod state state INVALID DROP;
            mod state state (ESTABLISHED RELATED) ACCEPT;

            # allow ping
            proto icmp ACCEPT;

            # allow local packet
            interface lo ACCEPT;

            # allow SSH connections
            proto tcp dport ssh ACCEPT;

        }

        chain OUTPUT {
            policy ACCEPT;
            # connection tracking
            mod state state (ESTABLISHED RELATED) ACCEPT;
        }

        chain FORWARD {
            policy ACCEPT;
            # connection tracking
            mod state state INVALID DROP;
            mod state state (ESTABLISHED RELATED) ACCEPT;
        }
    }
}

@include '<%= @ferm_dir %>/rules.d/';
@include '<%= @ferm_dir %>/macros.d/';

